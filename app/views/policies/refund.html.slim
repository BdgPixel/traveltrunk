                form-group
                  br
                  = f.input :subject, required: false, input_html: { class: 'form-control text-capitalize' }

              .col-md-12
                form-group
                  br
                  = f.input :message, as: :text, required: false, input_html: { class: 'form-control', rows: 15}

              .col-md-12
                .form-group
                  br
                    = f.submit "Submit", class: 'btn btn-orange'
