$("#dealsHotelsList").html("<%= j render 'hotels_list' %>")

<%- if session[:last_destination_search].nil? %>
  $("#destinationLabel").text("SEARCH")
<%- else %>
  $("#destinationLabel").text("<%= session[:last_destination_search][:destinationString].split(",").first %>")
<% end %>

<%- if @error_response %>
  $("#error_response").removeClass('hide')
  $("#error_response").text("<%= @error_response %>")
<%- else %>
  $("#error_response").addClass('hide')
<% end %>

$('#collapseDeals').slideUp()
$('[data-toggle="tooltip"]').tooltip()

$('div.deals-image').lazyload({
  effect : 'fadeIn'
});

$("#loadMore").attr("data-cache-key", "<%= @hotel_list_cache_key %>")
$("#loadMore").attr("data-cache-location", "<%= @hotel_list_cache_location %>")
