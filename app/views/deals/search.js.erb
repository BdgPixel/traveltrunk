$("#dealsHotelsList").html("<%= j render 'hotels_list' %>")

<%- if session[:last_destination_search][:city].blank? %>
  $("#destinationLabel").text("SEARCH")
<%- else %>
  $("#destinationLabel").text("<%= session[:last_destination_search][:city].upcase %>")
<% end %>

<%- if @error_response %>
  $("#error_response").removeClass('hide')
  $("#error_response").text("<%= @error_response %>")
<%- else %>
  $("#error_response").addClass('hide')
<% end %>

$('#collapseDeals').slideUp()
