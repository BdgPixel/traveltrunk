$('.modal-body').html("<%= j render 'book' %>");
$('.modal-header h4').text("<%= @room_availability['hotelName'] %>");

if ($('#roomRating').length > 0) {
  var rating_count = parseFloat($('#roomRating').data('rating'));
  
  $('#roomRating').raty({
    half: true,
    readOnly: true,
    score: rating_count,
    starOn: window.star_on_mid_image_path,
    starOff: window.star_off_mid_image_path,
    starHalf: window.star_half_mid_image_path
  });
}
